<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Sighting</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @sighting.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Id: </td>
                <td class="itemValue"><input type="text" name="sighting[id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Sighted at: </td>
                <td class="itemValue"><input type="text" name="sighting[sighted_at]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Reported at: </td>
                <td class="itemValue"><input type="text" name="sighting[reported_at]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Location: </td>
                <td class="itemValue"><input type="text" name="sighting[location]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Shape: </td>
                <td class="itemValue"><input type="text" name="sighting[shape]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Duration: </td>
                <td class="itemValue"><input type="text" name="sighting[duration]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Description: </td>
                <td class="itemValue"><input type="text" name="sighting[description]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Coord: </td>
                <td class="itemValue"><input type="text" name="sighting[coord]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Links: </td>
                <td class="itemValue"><input type="text" name="sighting[links]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Source: </td>
                <td class="itemValue"><input type="text" name="sighting[source]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
