<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @sighting.object %>
    <h1>Edit <%= @sighting.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @sighting.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @sighting.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="sighting[id]" value="<%= @sighting.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Sighted at: </td>
              <td class="itemValue"><input type="text" name="sighting[sighted_at]" value="<%= @sighting.sighted_at %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Reported at: </td>
              <td class="itemValue"><input type="text" name="sighting[reported_at]" value="<%= @sighting.reported_at %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Location: </td>
              <td class="itemValue"><input type="text" name="sighting[location]" value="<%= @sighting.location %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Shape: </td>
              <td class="itemValue"><input type="text" name="sighting[shape]" value="<%= @sighting.shape %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Duration: </td>
              <td class="itemValue"><input type="text" name="sighting[duration]" value="<%= @sighting.duration %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Description: </td>
              <td class="itemValue"><input type="text" name="sighting[description]" value="<%= @sighting.description %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Coord: </td>
              <td class="itemValue"><input type="text" name="sighting[coord]" value="<%= @sighting.coord %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Links: </td>
              <td class="itemValue"><input type="text" name="sighting[links]" value="<%= @sighting.links %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Source: </td>
              <td class="itemValue"><input type="text" name="sighting[source]" value="<%= @sighting.source %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
